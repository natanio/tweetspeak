<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group">
    <%= image_tag @course.course_image.url(:medium) %>
    <%= f.label :course_image %>
    <%= f.file_field :course_image %>
  </div>

  <div class="form-group">
    <%= f.text_field :starting_lesson, placeholder: "What's the first lesson's id?", class: "form-control" %>
    <%= f.text_field :ending_lesson, placeholder: "What's the last lesson's id?", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :title, placeholder: "Add a course name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :tagline, placeholder: "Add a snazzy tagline", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_area :description, placeholder: "Add a course description", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :price, placeholder: "Price, minus '$'. example: 15 or 15.99", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary'%>
  </div>
<% end %>
