<%= form_for(@lesson) do |f| %>
  <% if @lesson.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul>
      <% @lesson.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, class: "form-control", placeholder: 'Lesson #' %>
  </div>

  <div class="form-group">
    <%= f.select :course_id, Course.pluck(:title, :id), class: "form-control", placeholder: 'Lesson #' %>
  </div>

  <div class="form-group">
    <%= f.text_field :video, class: "form-control", placeholder: 'Video # from URL' %>
  </div>
  <div class="form-group">
    <%= f.text_field :answer, class: "form-control", placeholder: 'Answer (what is said in the video)' %>
  </div>
  <div class="form-group">
    <%= f.text_field :tweet, class: "form-control", placeholder: 'Tweet embed code' %>
  </div>

  <!-- Text area input. -->
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Pronunciation Guide</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
      <%= f.text_area :pronunciation, class: "form-control wysihtml5", placeholder: 'Pronunciation guide' %>
      <script type="text/javascript">
        $(document).ready(function(){

          $('.wysihtml5').each(function(i, elem) {
            $(elem).wysihtml5();
          });

        })
      </script>
      </div>
    </div>
  </div>
  <br>

  <div class="form-group">
    <%= f.text_field :audio, class: "form-control", placeholder: 'Audio embed code' %>
  </div>

  <!-- Text area input. -->
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Lesson Text</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
      <%= f.text_area :text, class: "form-control wysihtml5", placeholder: 'Lesson text, use MarkDown to format' %>
      </div>
    </div>
</div>
<br>

  <div class="form-group">
    <%= f.label :tags %>, valuable chunks the learn can look up later.</p>
    <%= f.text_field :tags, class: "form-control", placeholder: 'any target phrases from the lesson' %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
