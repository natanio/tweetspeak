<div class="paper">
	<% flash.each do |name, msg| %>
    	<% if msg.is_a?(String) %>
      		<div class="alert alert-<%= name == :notice ? "success" : "danger" %> alert-dismissable">
        	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        	<%= content_tag :div, msg, :id => "flash_#{name}" %>
      		</div>
    	<% end %>
  	<% end %>

			<div class="page-header">
        <div class="center-block">
          <ul class="nav nav-pills">
              <li class="active"><a href="/courses/<%= params[:course_id] %>/lessons/<%= @lesson.id %>/step/1">Step 1 <span class="glyphicon glyphicon-chevron-right"></span></a></li>
              <li><a href="/courses/<%= params[:course_id] %>/lessons/<%= @lesson.id %>/step/3">Step 2 <span class="glyphicon glyphicon-chevron-right"></span></a></li>
              <li><a href="/courses/<%= params[:course_id] %>/lessons/<%= @lesson.id %>/step/4">Step 3 <span class="glyphicon glyphicon-chevron-right"></span></a></li>
          </ul>
        </div>
				<div class="row">
					<div class="col-md-11">
						<h1 style="font-family: 'Roboto Slab', serif;">Step 1 <small>Video & Listening</small></h1>
					</div> <!-- End first column. -->

				<div class="col-md-1 top-space">
					<!-- Button trigger modal -->
					<a class="btn btn-default" style="cursor: help;" data-toggle="modal" data-target="#myModal">
	  					Help?
						</a>
					<!-- <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
	  				Launch demo modal
					</button> -->

					<!-- Modal -->
					<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  					<div class="modal-dialog">
	    					<div class="modal-content">
	      						<div class="modal-header">
	        						<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	        						<h4 class="modal-title" id="myModalLabel">How To Use This Page</h4>
	      						</div>
	      					<div class="modal-body">
	        					<ol>
	        						<li>Watch the video. Don't worry about understanding the meaning. Listen and try to pick up all the words.</li>
	        						<li>Enter those words you hear in the answer box. You only need to enter the word once.</li>
	        						<li>You can listen to the video as much as you like, or you can check your answer.</li>
	        					</ol>

	        					<p>Good luck!</p>
	      					</div>
	      					<div class="modal-footer">
	        					<button type="button" class="btn btn-primary" data-dismiss="modal">Got it</button>
	      					</div>
    						</div>
  						</div>
					</div>
				</div>
			</div>
		</div>


			<!-- 16:9 aspect ratio -->
			<div class="embed-responsive embed-responsive-16by9">
			  <iframe
				src="//player.vimeo.com/video/<%= @lesson.video %>?title=0&amp;byline=0&amp;
				portrait=0" width="700" height="394" frameborder="0"
				webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
			</div>
			<br>
			<br>
			<div class="panel panel-default">
  				<div class="panel-heading">
  					<h3 class="panel-title">Check your listening.</h3>
    			</div>
  				<div class="panel-body">
    				<form role="form" action="/courses/<%= @lesson.course.id %>/lessons/<%= @lesson.id %>/step/2">
  						<div class="form-group">
    						<input type="text" class="form-control" id="studentAnswer" placeholder="Type the words you hear in the video..." name="words">
  						</div>
  						<div class="center"><button type="submit" class="btn btn-primary">Check Answer</button></div>
					</form>
					<br>
					<div class="center">
						<a onclick="alert('There are <%= @lesson.answer.scan(/\w+/).size %> words.')" class="btn btn-default hint" data-toggle="tooltip" data-placement="bottom" title="There are <%= @lesson.answer.scan(/\w+/).size %> words.">Get a Hint</a>
    					<script> $('.hint').tooltip() </script>
    				</div>
  				</div>
			</div>
</div>