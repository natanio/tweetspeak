<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="signup-light">
<form role="form">
  <div class="row">
    <div class="col-md-4" style="margin-top: 6px;">
  <div class="form-group">
    <label for="inputEmail" class="sr-only">Email</label>
      <%= f.email_field :email, :autofocus => true, id: "inputEmail", class: "form-control", placeholder: 'Enter your email' %>
  </div>
</div>
<div class="col-md-4">
  <div class="form-group" style="margin-top: 6px;">
    <label for="inputPassword" class="sr-only">Password</label>
      <%= f.password_field :password, id: "inputPassword", class: "form-control", placeholder: 'Password' %>
  </div>
</div>

    <div class="col-md-4">
      <%= f.submit "Sign up", class:"btn btn-success btn-lg" %>
    </div>
  </div>
    
        <% if !user_signed_in? %>
          <div class="center"><%= link_to "Already a member? Sign in.", new_session_path(:user) %>
        <% end %>
    <% end %>
          </div>
</form>
</div>