<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <h2>Join Now for a Free Lesson</h2>

  <div class="form-group">
    <%= f.text_field :name, :autofocus => true, class: "form-control", placeholder: 'First name' %>
  </div>

  <div class="form-group">
  <%= f.email_field :email, class: "form-control", placeholder: 'Enter your email' %></div>

  <div class="form-group">
  <%= f.password_field :password, class: "form-control", placeholder: 'Password' %></div>

  <div class="form-group">
  <%= f.password_field :password_confirmation, class: "form-control", placeholder: 'Password confirmation' %></div>

  <div class="form-group">
  <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %></div>
   <% if !user_signed_in? %>
   	<div class="center"><%= link_to "Already a member? Sign in.", new_session_path(:user) %></div>
   <% end %>
  <% end %>